    <script>
        const mp = new MercadoPago("APP_USR-b82e04b9-4e72-4ae1-8a09-0e7606d754f6", {
            locale: "es-PE"
        });

        document.getElementById("btnPagar")?.addEventListener("click", async () => {
            try {
                const response = await fetch("/api/pago/crear-preferencia", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({
                        titulo: "Reserva en @hotelNombre",
                        monto: @precioTotal
                    })
                });

                const data = await response.json();

                if (data.preferenceId) {
                    mp.checkout({
                        preference: { id: data.preferenceId },
                        autoOpen: true, 
                    });
                } else {
                    alert("‚ùå Error al crear la preferencia de pago.");
