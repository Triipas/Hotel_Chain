@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Paso 4 - Confirmaci√≥n";

    var habitacion = ViewBag.Habitacion as Hotel_chain.Models.Entities.Habitacion;
    var hotelNombre = habitacion?.Hotel?.Nombre ?? "Hotel";
    var fechaInicio = (DateTime)ViewBag.FechaInicio;
    var fechaFin = (DateTime)ViewBag.FechaFin;
    var numeroNoches = (int)ViewBag.NumeroNoches;
    var numeroHuespedes = (int)ViewBag.NumeroHuespedes;
    var solicitudes = ViewBag.SolicitudesEspeciales?.ToString();
    var isLoggedIn = (bool)ViewBag.IsLoggedIn;

 var usuario = ViewBag.Usuario as Hotel_chain.Models.Entities.Usuario;
var usuarioNombre = usuario?.Nombre ?? "";
var usuarioApellido = usuario?.Apellido ?? "";
var usuarioEmail = usuario?.Email ?? "";
var usuarioTelefono = usuario?.Telefono ?? "";

    var roomRate = habitacion?.PrecioNoche ?? 0;
    var subtotal = habitacion?.PrecioBase ?? 0;
    var taxes = habitacion?.PrecioImpuestos ?? 0;
    var currency = habitacion?.Moneda ?? "PEN";


    var precioTotal = habitacion?.PrecioTotal ?? (subtotal + taxes);
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StayGo</title>
    <link rel="stylesheet" href="~/client/css/main.css?v=9">
    <link rel="stylesheet" href="~/client/css/pages/pasos-reserva.css">
</head>
<body>
<header>
    <nav class="navbar">
        <div class="logo">StayGo</div>
        <button class="menu-toggle" aria-label="Abrir men√∫">
            <span></span><span></span><span></span>
        </button>
        <div class="nav-derecha">
            <ul class="nav-links">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Hotel" asp-action="Index">Hoteles</a></li>
            </ul>
            @if (HttpContextAccessor.HttpContext.Session.GetString("UsuarioNombre") != null)
            {
                <span>@HttpContextAccessor.HttpContext.Session.GetString("UsuarioNombre")</span>
                <a asp-controller="Login" asp-action="Logout"><button>Cerrar Sesi√≥n</button></a>
            }
            else
            {
                <a asp-controller="Login" asp-action="Index"><button class="login-btn">Ingresar</button></a>
            }
        </div>
    </nav>
</header>

<div class="paso-container">
    <div class="progreso-pasos">
        <div class="paso completado"><div class="paso-numero">‚úì</div><div class="paso-texto">Hu√©spedes & Habitaci√≥n</div></div>
        <div class="paso completado"><div class="paso-numero">‚úì</div><div class="paso-texto">Fechas de estad√≠a</div></div>
        <div class="paso completado"><div class="paso-numero">‚úì</div><div class="paso-texto">Confirmar reserva</div></div>
        <div class="paso activo"><div class="paso-numero">4</div><div class="paso-texto">Monto total</div></div>
    </div>

    <div class="card-paso">
        <h1 class="titulo-hotel">@hotelNombre</h1>


<div style="margin-top: 30px; border-top: 1px solid var(--border-light); padding-top: 20px;">
    <h4>üë§ Datos del Hu√©sped</h4>
    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px 20px;">
        <div>
            <p class="text-muted">Nombre:</p>
            <p class="text-strong">@usuarioNombre @usuarioApellido</p>
        </div>
        <div>
            <p class="text-muted">Email:</p>
            <p class="text-strong">@usuarioEmail</p>
        </div>
        <div>
            <p class="text-muted">Tel√©fono:</p>
            <p class="text-strong">@usuarioTelefono</p>
        </div>
    </div>
</div>


        <div class="precio-total-grande">
            <div class="label">Monto Total a Pagar</div>
            <div class="monto">@currency @precioTotal.ToString("N2")</div>
            <p style="opacity: 0.9; margin-top: 10px; font-size: 0.9rem;">
                Pago al momento del check-in
            </p>
        </div>

        <div class="resumen-detalle">
            <h4>üìù Detalles Finales de tu Reserva</h4>
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px 20px;">
                <div>
                    <p class="text-muted">Hotel:</p>
                    <p class="text-strong">@hotelNombre</p>
                </div>
                <div>
                    <p class="text-muted">Habitaci√≥n:</p>
                    <p class="text-strong">@habitacion?.NumeroHabitacion - @habitacion?.Tipo</p>
                </div>
                <div>
                    <p class="text-muted">Check-in:</p>
                    <p class="text-strong">@fechaInicio.ToString("dd/MM/yyyy")</p>
                </div>
                <div>
                    <p class="text-muted">Check-out:</p>
                    <p class="text-strong">@fechaFin.ToString("dd/MM/yyyy")</p>
                </div>
                <div>
                    <p class="text-muted">Noches:</p>
                    <p class="text-strong">@numeroNoches noche@(numeroNoches > 1 ? "s" : "")</p>
                </div>
                <div>
                    <p class="text-muted">Hu√©spedes:</p>
                    <p class="text-strong">@numeroHuespedes persona@(numeroHuespedes > 1 ? "s" : "")</p>
                </div>
            </div>

            <!-- üí≥ NUEVA SECCI√ìN: DETALLES DE PAGO -->
            <div style="margin-top: 30px; border-top: 1px solid var(--border-light); padding-top: 20px;">
                <h4>üí≥ Detalles de Pago</h4>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px 20px;">
                    <div>
                        <p class="text-muted">Tarifa por noche:</p>
                        <p class="text-strong">@currency @roomRate.ToString("N2")</p>
                    </div>
                    <div>
                        <p class="text-muted">Subtotal:</p>
                        <p class="text-strong">@currency @subtotal.ToString("N2")</p>
                    </div>
                    <div>
                        <p class="text-muted">Impuestos:</p>
                        <p class="text-strong">@currency @taxes.ToString("N2")</p>
                    </div>
                    <div>
                        <p class="text-muted">Moneda:</p>
                        <p class="text-strong">@currency</p>
                    </div>
                </div>

                <div style="margin-top: 20px;">
                    <label for="PaymentMethod" style="display:block; margin-bottom:5px;">M√©todo de Pago</label>
                    <select id="PaymentMethod" name="PaymentMethod" class="form-select" required style="width:100%; padding:8px; border-radius:8px; border:1px solid #ccc;">
                        <option value="">Selecciona un m√©todo</option>
                        <option value="efectivo">Efectivo</option>
                        <option value="tarjeta">Tarjeta de cr√©dito / d√©bito</option>
                        <option value="yape">Yape / Plin</option>
                        <option value="transferencia">Transferencia bancaria</option>
                    </select>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(solicitudes))
            {
                <div style="margin-top: 20px; padding-top: 20px; border-top: 1px solid var(--border-light);">
                    <p class="text-muted">Solicitudes Especiales:</p>
                    <p class="text-strong">@solicitudes</p>
                </div>
            }
        </div>

        @if (TempData["Error"] != null)
        {
            <div style="background: #fee; color: #c53030; padding: 15px; border-radius: 8px; margin: 20px 0;">
                ‚ö†Ô∏è @TempData["Error"]
            </div>
        }

        @if (isLoggedIn)
        {
            <form asp-action="ConfirmarReserva" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" name="PaymentMethod" id="HiddenPaymentMethod" />

                <script>
                    document.addEventListener('submit', function () {
                        const selected = document.getElementById('PaymentMethod').value;
                        document.getElementById('HiddenPaymentMethod').value = selected;
                    });
                </script>

                <div style="background: #d1f2eb; border-left: 4px solid #0f5132; padding: 15px; border-radius: 4px; margin: 20px 0;">
                    <h4 style="color: #0f5132; margin-bottom: 10px;">‚úì Todo listo para confirmar</h4>
                    <p style="color: #0f5132; margin: 0;">
                        Al confirmar, se crear√° tu reserva y recibir√°s un n√∫mero de confirmaci√≥n.
                        El pago se realizar√° en el hotel al momento del check-in.
                    </p>
                </div>

                <div class="botones-navegacion">
                    <a asp-action="Paso3" class="btn-paso btn-cancelar">‚Üê Atr√°s</a>
                    <button type="submit" class="btn-paso btn-continuar">‚úì Confirmar Reserva</button>
                </div>
            </form>
        }
        else
        {
            <div style="background: #fff3cd; border-left: 4px solid #856404; padding: 20px; border-radius: 4px; margin: 20px 0;">
                <h4 style="color: #856404;">üîê Inicia sesi√≥n para continuar</h4>
                <p style="color: #856404;">Para confirmar tu reserva, necesitas iniciar sesi√≥n o crear una cuenta.</p>
            </div>

            <div class="botones-navegacion">
                <a asp-action="Paso3" class="btn-paso btn-cancelar">‚Üê Atr√°s</a>
                <a asp-controller="Login" asp-action="Index" class="btn-paso btn-continuar">üîê Iniciar Sesi√≥n</a>
            </div>
        }
    </div>
</div>

<script src="~/client/js/responsive-navbar.js"></script>
</body>
</html>