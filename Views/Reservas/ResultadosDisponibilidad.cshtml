@model IEnumerable<Hotel_chain.Models.Entities.Habitacion>
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Habitaciones Disponibles";
    var hotel = ViewBag.Hotel as Hotel_chain.Models.Entities.Hotel;
    var fechaInicio = (DateTime)ViewBag.FechaInicio;
    var fechaFin = (DateTime)ViewBag.FechaFin;
    var numeroHuespedes = (int)ViewBag.NumeroHuespedes;
    var numeroNoches = (int)ViewBag.NumeroNoches;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StayGo</title>
    <link rel="stylesheet" href="~/client/css/main.css?v=8">
    <style>
        .resultados-container {
            max-width: 1200px;
            margin: 40px auto;
            padding: 0 20px;
        }

        .resultados-header {
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            margin-bottom: 30px;
        }

        .resultados-header h1 {
            color: var(--accent-color);
            margin-bottom: 15px;
        }

        .info-busqueda {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin-top: 20px;
            padding-top: 20px;
            border-top: 1px solid var(--border-color);
        }

        .info-item {
            display: flex;
            align-items: center;
            gap: 8px;
            color: var(--text-dark);
        }

        .info-item strong {
            color: var(--accent-color);
        }

        .habitaciones-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 25px;
            margin-bottom: 40px;
        }

        .habitacion-card-result {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 2px 12px rgba(0,0,0,0.1);
            transition: all 0.3s;
        }

        .habitacion-card-result:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

        .habitacion-img-result {
            width: 100%;
            height: 220px;
            object-fit: cover;
        }

        .habitacion-info {
            padding: 20px;
        }

        .habitacion-tipo {
            display: inline-block;
            background: var(--primary-color);
            color: white;
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
            text-transform: capitalize;
            margin-bottom: 10px;
        }

        .habitacion-numero {
            font-size: 1.3rem;
            color: var(--accent-color);
            font-weight: 600;
            margin-bottom: 10px;
        }

        .habitacion-detalles {
            display: flex;
            gap: 15px;
            margin: 15px 0;
            color: var(--text-light);
            font-size: 0.95rem;
        }

        .habitacion-precio {
            background: var(--background-section);
            padding: 15px;
            border-radius: 8px;
            margin: 15px 0;
        }

        .precio-noche {
            font-size: 0.9rem;
            color: var(--text-light);
            margin-bottom: 5px;
        }

        .precio-total {
            font-size: 1.8rem;
            color: var(--primary-color);
            font-weight: bold;
        }

        .precio-total small {
            font-size: 0.9rem;
            color: var(--text-light);
            font-weight: normal;
        }

        .btn-reservar-ahora {
            width: 100%;
            background: var(--secondary-color);
            color: white;
            padding: 12px;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
        }

        .btn-reservar-ahora:hover {
            background: var(--secondary-hover);
            transform: translateY(-2px);
        }

        .no-results {
            text-align: center;
            padding: 60px 20px;
            background: white;
            border-radius: 12px;
        }

        .no-results-icon {
            font-size: 4rem;
            margin-bottom: 20px;
        }

        .btn-nueva-busqueda {
            display: inline-block;
            margin-top: 20px;
            padding: 12px 24px;
            background: var(--primary-color);
            color: white;
            text-decoration: none;
            border-radius: 8px;
            transition: all 0.3s;
        }

        .btn-nueva-busqueda:hover {
            background: var(--primary-hover);
            color: white;
        }

        @@media (max-width: 768px) {
            .habitaciones-grid {
                grid-template-columns: 1fr;
            }

            .info-busqueda {
                flex-direction: column;
                gap: 10px;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="logo">StayGo</div>
            <button class="menu-toggle" aria-label="Abrir men√∫">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <div class="nav-derecha">
                <ul class="nav-links">
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Hotel" asp-action="Index">Hoteles</a></li>
                    <li><a asp-controller="Reservas" asp-action="BuscarDisponibilidad">Reservar</a></li>
                    <li><a asp-controller="Servicios" asp-action="Index">Servicios</a></li>
                    <li><a asp-controller="SobreNosotros" asp-action="Index">Sobre Nosotros</a></li>
                </ul>
                @if (HttpContextAccessor.HttpContext.Session.GetString("UsuarioNombre") != null)
                {
                    <span>@HttpContextAccessor.HttpContext.Session.GetString("UsuarioNombre")</span>
                    <a asp-controller="Reservas" asp-action="MisReservas"><button>Mis Reservas</button></a>
                    <a asp-controller="Login" asp-action="Logout"><button>Cerrar Sesi√≥n</button></a>
                }
                else
                {
                    <a asp-controller="Login" asp-action="Index"><button class="login-btn">Ingresar</button></a>
                }
            </div>
        </nav>
    </header>

    <div class="resultados-container">
        <div class="resultados-header">
            <h1>Habitaciones Disponibles en @hotel?.Nombre</h1>
            <div class="info-busqueda">
                <div class="info-item">
                    <span>üìÖ</span>
                    <span><strong>Check-in:</strong> @fechaInicio.ToString("dd/MM/yyyy")</span>
                </div>
                <div class="info-item">
                    <span>üìÖ</span>
                    <span><strong>Check-out:</strong> @fechaFin.ToString("dd/MM/yyyy")</span>
                </div>
                <div class="info-item">
                    <span>üõèÔ∏è</span>
                    <span><strong>@numeroNoches</strong> noche@(numeroNoches > 1 ? "s" : "")</span>
                </div>
                <div class="info-item">
                    <span>üë•</span>
                    <span><strong>@numeroHuespedes</strong> hu√©sped@(numeroHuespedes > 1 ? "es" : "")</span>
                </div>
            </div>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="habitaciones-grid">
                @foreach (var habitacion in Model)
                {
                    var precioTotal = habitacion.PrecioNoche * numeroNoches;
                    <div class="habitacion-card-result">
                        @if (habitacion.Imagenes != null && habitacion.Imagenes.Any())
                        {
                            <img src="~/client/imagenes/@habitacion.Imagenes.First().NombreArchivo" 
                                 alt="@habitacion.NumeroHabitacion" 
                                 class="habitacion-img-result" />
                        }
                        else
                        {
                            <img src="~/client/imagenes/default-room.jpg" 
                                 alt="@habitacion.NumeroHabitacion" 
                                 class="habitacion-img-result" />
                        }

                        <div class="habitacion-info">
                            <span class="habitacion-tipo">@habitacion.Tipo</span>
                            <div class="habitacion-numero">Habitaci√≥n @habitacion.NumeroHabitacion</div>
                            
                            <div class="habitacion-detalles">
                                <span>üë• Hasta @habitacion.Capacidad personas</span>
                            </div>

                            @if (!string.IsNullOrEmpty(habitacion.Descripcion))
                            {
                                <p style="color: var(--text-light); font-size: 0.95rem; margin: 10px 0;">
                                    @habitacion.Descripcion
                                </p>
                            }

                            <div class="habitacion-precio">
                                <div class="precio-noche">S/ @habitacion.PrecioNoche.ToString("N2") por noche</div>
                                <div class="precio-total">
                                    S/ @precioTotal.ToString("N2")
                                    <small>total</small>
                                </div>
                            </div>

                            <a asp-controller="Reservas" 
                               asp-action="Crear"
                               asp-route-habitacionId="@habitacion.HabitacionId"
                               asp-route-fechaInicio="@fechaInicio.ToString("yyyy-MM-dd")"
                               asp-route-fechaFin="@fechaFin.ToString("yyyy-MM-dd")"
                               asp-route-huespedes="@numeroHuespedes"
                               class="btn-reservar-ahora">
                                ‚úì Reservar Ahora
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="no-results">
                <div class="no-results-icon">üòî</div>
                <h2>No hay habitaciones disponibles</h2>
                <p>Lo sentimos, no encontramos habitaciones disponibles para las fechas seleccionadas.</p>
                <p>Intenta con otras fechas o un hotel diferente.</p>
                <a asp-action="BuscarDisponibilidad" class="btn-nueva-busqueda">
                    üîç Nueva B√∫squeda
                </a>
            </div>
        }
    </div>

    <script src="~/client/js/responsive-navbar.js"></script>
</body>
</html>