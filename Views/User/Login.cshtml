                <input type="text" name="nombre" id="regNombre" placeholder="Ingrese su Nombre" required>
            </div>

            <div class="form-group">
                <label for="regApellido">Apellido</label>
                <input type="text" name="apellido" id="regApellido" placeholder="Ingrese su Apellido" required>
            </div>

            <div class="form-group">
                <label for="regEmail">E-mail</label>
