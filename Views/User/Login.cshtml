@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Inicio de Sesi√≥n - Cliente";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/client/css/pages/login.css?v=3">
</head>
<style>
.form-columns {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 25px;
    width: 100%;
}

.left-column,
.right-column {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.form-columns h4 {
