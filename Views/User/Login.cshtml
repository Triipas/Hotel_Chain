                    {
                        <div class="error-message">@ViewBag.Mensaje</div>
                    }
                    
                    <form id="registerForm" method="post" asp-controller="Login" asp-action="RegisterUser">

    <div class="form-columns">
        <!-- üü¶ COLUMNA IZQUIERDA: CAMPOS OBLIGATORIOS -->
        <div class="left-column">
