@model List<Hotel_chain.Models.Entities.Habitacion>
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Habitaciones";
    var hotel = ViewBag.Hotel as Hotel_chain.Models.Entities.Hotel;
}
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Costa Dorada - Habitaciones</title>
    <link rel="stylesheet" href="~/client/css/main.css?v=7">
</head>
<style>
.titulo-hotel {
    text-align: center;
    margin: 60px 0 40px 0;
    font-size: 2.5rem;
    color: #1a1a1a;
    font-weight: 600;
}

.filtro-habitaciones {
    display: flex;
    justify-content: center;
    margin-bottom: 40px;
}

.filtro-form {
    display: inline-flex;
    gap: 15px;
    align-items: center;
    background-color: #f5f5f5;
    padding: 20px 30px;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.filtro-form select {
    padding: 10px 15px;
    border: 1px solid #ddd;
    border-radius: 8px;
    font-size: 1rem;
    min-width: 150px;
}

.filtro-form button {
    padding: 10px 30px;
    background-color: #0077cc;
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    cursor: pointer;
    font-weight: 600;
    transition: background-color 0.3s;
}

.filtro-form button:hover {
    background-color: #005fa3;
}

.listado-habitaciones .habitaciones-container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 20px;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
}

/* Estructura de matriz 2x2 usando CSS Grid */
.habitacion-card {
    width: auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: auto auto;
    gap: 15px;
    border: 1px solid #ccc;
    border-radius: 8px;
    padding: 20px;
    background-color: #f9f9f9;
    margin-bottom: 20px;
}

/* Posici√≥n 1.1: Imagen (arriba izquierda) */
.habitacion-imagen {
    grid-column: 1;
    grid-row: 1;
    position: relative;
}

.habitacion-imagen img {
    width: 100%;
    height: 250px;
    object-fit: cover;
    border-radius: 8px;
}

.badge-agotado-overlay {
    position: absolute;
    top: 10px;
    right: 10px;
    background-color: #ff4444;
    color: white;
    padding: 8px 15px;
    border-radius: 5px;
    font-weight: bold;
    font-size: 0.9rem;
}

/* Posici√≥n 1.2: Info (abajo izquierda) */
.habitacion-info {
    grid-column: 1;
    grid-row: 2;
    display: flex;
    flex-direction: column;
    gap: 3px;
    text-align: left;
}

.habitacion-info h3 {
    margin: 0 0 8px 0;
    color: #333;
    font-size: 1.2rem;
}

.habitacion-info p {
    margin: 2px 0;
    color: #555;
    font-size: 0.85rem;
}

.habitacion-info .descripcion {
    margin-top: 8px;
    color: #666;
    line-height: 1.5;
    font-size: 0.85rem;
}

/* Posici√≥n 2.1: Precio (arriba derecha) */
.habitacion-precio {
    grid-column: 2;
    grid-row: 1;
    display: flex;
    flex-direction: column;
    gap: 8px;
    padding: 15px;
    background-color: #fff;
    border-radius: 8px;
    padding-bottom: 0px;
}

.precio-principal {
    text-align: center;
    padding: 15px;
    background-color: #0077cc;
    color: white;
    border-radius: 8px;
}

.precio-principal .label {
    display: block;
    font-size: 0.85rem;
    font-weight: 500;
    margin-bottom: 5px;
}

.precio-principal .valor {
    display: block;
    font-size: 1.8rem;
    font-weight: bold;
}

.precio-desglose {
    display: flex;
    flex-direction: column;
    gap: 5px;
}

.precio-desglose p {
    display: flex;
    justify-content: space-between;
    margin: 0;
    padding: 5px 0;
    border-bottom: 1px solid #eee;
    font-size: 0.9rem;
}

.disponibilidad {
    text-align: center;
    padding: 5px 0;
}

.badge-disponible {
    display: inline-block;
    background-color: #28a745;
    color: white;
    padding: 8px 15px;
    border-radius: 20px;
    font-weight: 600;
    font-size: 0.9rem;
}

.badge-no-disponible {
    display: inline-block;
    background-color: #dc3545;
    color: white;
    padding: 8px 15px;
    border-radius: 20px;
    font-weight: 600;
    font-size: 0.9rem;
}


/* Posici√≥n 2.2: Botones (abajo derecha) */
.habitacion-botones {
    grid-column: 2;
    grid-row: 2;
    display: flex;
    flex-direction: column;
    gap: 10px;
    justify-content: center;
    padding: 15px;
}

.btn-reservar-negro, .btn-detalles-negro {
    display: inline-block;
    padding: 12px 20px;
    background-color: #333;
    color: white;
    text-decoration: none;
    border-radius: 8px;
    text-align: center;
    width: 100%;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s;
    border: none;
    cursor: pointer;
}

.btn-reservar-negro:hover, .btn-detalles-negro:hover {
    background-color: #555;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.2);
}

.btn-reservar-negro.disabled {
    background-color: #999;
    cursor: not-allowed;
    opacity: 0.6;
}

.btn-reservar-negro.disabled:hover {
    transform: none;
    box-shadow: none;
}

.sin-resultados {
    text-align: center;
    padding: 40px;
    font-size: 1.2rem;
    color: #666;
}

/* Responsive para tablets */
@@media (max-width: 768px) {
    .habitacion-card {
        grid-template-columns: 1fr;
        grid-template-rows: auto auto auto auto;
    }
    
    .habitacion-imagen {
        grid-column: 1;
        grid-row: 1;
    }
    
    .habitacion-precio {
        grid-column: 1;
        grid-row: 2;
    }
    
    .habitacion-info {
        grid-column: 1;
        grid-row: 3;
    }
    
    .habitacion-botones {
        grid-column: 1;
        grid-row: 4;
    }
}

/* Responsive para m√≥viles */
@@media (max-width: 480px) {
    .filtro-form {
        flex-direction: column;
        width: 90%;
    }
    
    .filtro-form select {
        width: 100%;
    } 
    
    .habitacion-imagen img {
        height: 200px;
    }
    
    .precio-principal .valor {
        font-size: 1.5rem;
    }
} 
</style>
