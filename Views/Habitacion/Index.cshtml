@model List<Hotel_chain.Models.Entities.Habitacion>
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Habitaciones";
    var hotel = ViewBag.Hotel as Hotel_chain.Models.Entities.Hotel;
}
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Costa Dorada - Habitaciones</title>
    <link rel="stylesheet" href="~/client/css/main.css?v=7">
</head>
<style>

.listado-habitaciones .container {
    max-width: 700px;
    margin: 0 auto;    
}

.habitacion-card {
    display: flex;
    gap: 15px;
    border: 1px solid #ccc;
    border-radius: 8px;
    padding: 10px;
    width: 100%;       
    max-width: 700px;  
    background-color: #f9f9f9;
    margin: 0 auto;  
}

.habitacion-card img {
    width: 200px;
    height: 150px;
    object-fit: cover;
    border-radius: 8px;
}


.habitacion-info {
    flex: 2;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}


.habitacion-precio {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-start;
}


.habitacion-botones {
    display: flex;
    flex-direction: column;
    gap: 5px;
    margin-top: 10px;
}

.btn-reservar-negro, .btn-detalles-negro {
    display: inline-block;
    padding: 8px 12px;
    background-color: #333;
    color: white;
    text-decoration: none;
    border-radius: 5px;
    text-align: center;
    width: 100%;
    font-weight: 500;
    transition: 0.3s;
}

.btn-reservar-negro:hover, .btn-detalles-negro:hover {
    background-color: #555;
}

@@media (max-width: 768px) {
    .habitacion-card {
        flex-direction: column;
        align-items: center;
    }
    .habitacion-precio, .habitacion-info {
        width: 100%;
        align-items: flex-start;
    }
    .habitacion-card img {
        width: 100%;
        max-width: 300px;
        height: auto;
    }
}

</style>
<header>
        <nav class="navbar">
            <div class="logo">Costa Dorada</div>
            <button class="menu-toggle" aria-label="Abrir men√∫">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <div class="nav-derecha">
                <ul class="nav-links">
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Hotel" asp-action="Index">Hoteles</a></li>
                    <li><a asp-controller="Habitacion" asp-action="Index">Habitaciones</a></li>
                    <li><a asp-controller="Servicios" asp-action="Index">Servicios</a></li>
                    <li><a asp-controller="SobreNosotros" asp-action="Index">Sobre Nosotros</a></li>
                </ul>
                @if (HttpContextAccessor.HttpContext.Session.GetString("UsuarioNombre") != null)
                {
                    <span>Bienvenido, @HttpContextAccessor.HttpContext.Session.GetString("UsuarioNombre")</span>
                    <a asp-controller="Login" asp-action="Logout"><button>Cerrar Sesi√≥n</button></a>
                }
                else
                {
                    <a asp-controller="Login" asp-action="Index"><button class="login-btn">Ingresar</button></a>
                }
            </div>
        </nav>
    </header>

<h2>Habitaciones de @hotel?.Nombre</h2>

<!-- Filtro -->
<section class="filtro-habitaciones">
    <form method="get" class="filtro-form">
        <input type="hidden" name="hotelId" value="@hotel?.HotelId" />

        <select name="tipo">
            <option value="">Tipo</option>
            <option value="simple">Simple</option>
            <option value="doble">Doble</option>
            <option value="suite">Suite</option>
        </select>

        <select name="capacidad">
            <option value="">Capacidad m√≠nima</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
        </select>

        <button type="submit">Filtrar</button>
    </form>
</section>

<section class="listado-habitaciones">
    <div class="habitaciones-container">
        @if (Model != null && Model.Any())
        {
            foreach (var hab in Model)
            {
                 var amenidades = ViewBag.AmenidadesPorHabitacion?[hab.HabitacionId] as IEnumerable<Hotel_chain.Models.Entities.HabitacionAmenidad>;
                <div class="habitacion-card">
                    <img src="~/client/imagenes/@hab.Imagenes.FirstOrDefault()?.NombreArchivo" 
                         alt="@hab.NumeroHabitacion"
                         class="habitacion-img" />

                        <div class="habitacion-info">
        <h3>Habitaci√≥n @hab.NumeroHabitacion</h3>
        @if (!string.IsNullOrEmpty(hab.Nombre))
        {
            <p><strong>Nombre:</strong> @hab.Nombre</p>
        }
        <p><strong>Tipo:</strong> @hab.Tipo</p>
        <p><strong>Capacidad:</strong> @hab.Capacidad personas</p>
        @if (hab.CapacidadAdultos.HasValue || hab.CapacidadNinos.HasValue)
        {
            <p><strong>Adultos:</strong> @hab.CapacidadAdultos ?? 0, 
               <strong>Ni√±os:</strong> @hab.CapacidadNinos ?? 0
            </p>
        }
        @if (hab.CantidadCamas.HasValue)
        {
            <p><strong>Camas:</strong> @hab.CantidadCamas @hab.TipoCama</p>
        }
        @if (hab.TamanoM2.HasValue)
        {
            <p><strong>Tama√±o:</strong> @hab.TamanoM2 m¬≤</p>
        }
        <p style="font-size: 0.9rem; color: var(--text-light);">
            <strong>Descripci√≥n:</strong> @hab.Descripcion
        </p>
        
       <p><strong>Amenidades:</strong> @string.Join(", ", amenidades.Select(a => a.Amenidad))</p>
    </div>

      <div class="habitacion-precio">
        <p><strong>Precio/noche:</strong> S/ @hab.PrecioBase.GetValueOrDefault().ToString("N2")</p>
        <p><strong>Disponible:</strong> @(hab.Disponible ? "S√≠" : "No")</p>

<p><strong>Precio Base:</strong> S/ @hab.PrecioBase.GetValueOrDefault().ToString("N2")</p>
<p><strong>Impuestos:</strong> S/ @hab.PrecioImpuestos.GetValueOrDefault().ToString("N2")</p>

        <div class="habitacion-botones">
            <a asp-controller="Reservas" 
               asp-action="IniciarReserva" 
               asp-route-habitacionId="@hab.HabitacionId"
               class="btn-reservar-negro">
                üõèÔ∏è Reservar
            </a>

            <a asp-controller="Habitacion" 
               asp-action="Detalles" 
               asp-route-id="@hab.HabitacionId" 
               class="btn-detalles-negro">
                üìã Detalles
            </a>
        </div>
    </div>
</div>
                

                    @if (!hab.Disponible)
                    {
                        <p style="color: red; font-weight: bold; margin-top: 10px;">¬°Agotado!</p>
                    }
            }
        }
        else
        {
            <p>No hay habitaciones disponibles para este hotel.</p>
        }
    </div>
</section>
<script src="~/client/js/responsive-navbar.js"></script>
<link rel="stylesheet" href="~/client/css/chatbot.css">
<script src="~/client/js/chatbot.js"></script>