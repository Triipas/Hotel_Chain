<h2 class="titulo-hotel">@hotel?.Nombre</h2>
 
<section class="filtro-habitaciones">
    <form method="get" class="filtro-form">
        <input type="hidden" name="hotelId" value="@hotel?.HotelId" />

        <select name="tipo">
            <option value="">Tipo</option>
            <option value="simple">Simple</option>
            <option value="doble">Doble</option>
            <option value="suite">Suite</option>
        </select>

        <select name="capacidad">
            <option value="">Capacidad m√≠nima</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
        </select>

        <button type="submit">Filtrar</button>
    </form>
</section>

<section class="listado-habitaciones">
    <div class="habitaciones-container">
        @if (Model != null && Model.Any())
        {
            foreach (var hab in Model)
            {
                var amenidades = ViewBag.AmenidadesPorHabitacion?[hab.HabitacionId] as IEnumerable<Hotel_chain.Models.Entities.HabitacionAmenidad>;
                <div class="habitacion-card">
                    
                    <!-- DIV 1.1: IMAGEN -->
                    <div class="habitacion-imagen">
                        <img src="~/client/imagenes/@hab.Imagenes.FirstOrDefault()?.NombreArchivo" 
                             alt="Habitaci√≥n @hab.NumeroHabitacion"
                             class="habitacion-img" />
                        @if (!hab.Disponible)
                        {
                            <div class="badge-agotado-overlay">¬°Agotado!</div>
                        }
                    </div>
                    
                    <!-- DIV 1.2: INFO DE LA HABITACI√ìN -->
                    <div class="habitacion-info">
                        <h3>Habitaci√≥n @hab.NumeroHabitacion</h3>
                        
                        @if (!string.IsNullOrEmpty(hab.Nombre))
                        {
                            <p><strong>Nombre:</strong> @hab.Nombre</p>
                        }
                        
                        <p><strong>Tipo:</strong> @hab.Tipo</p>
                        <p><strong>Capacidad:</strong> @hab.Capacidad personas</p>
                        
                        @if (hab.CapacidadAdultos.HasValue || hab.CapacidadNinos.HasValue)
                        {
                            <p>
                                <strong>Adultos:</strong> @(hab.CapacidadAdultos ?? 0), 
                                <strong>Ni√±os:</strong> @(hab.CapacidadNinos ?? 0)
                            </p>
                        }
                        
                        @if (hab.CantidadCamas.HasValue)
                        {
                            <p><strong>Camas:</strong> @hab.CantidadCamas @hab.TipoCama</p>
                        }
                        
                        @if (hab.TamanoM2.HasValue)
                        {
                            <p><strong>Tama√±o:</strong> @hab.TamanoM2 m¬≤</p>
                        }
                        
                        @if (!string.IsNullOrEmpty(hab.Descripcion))
                        {
                            <p class="descripcion">
                                <strong>Descripci√≥n:</strong> @hab.Descripcion
                            </p>
                        }
                        
                        @if (amenidades != null && amenidades.Any())
                        {
                            <p><strong>Amenidades:</strong> @string.Join(", ", amenidades.Select(a => a.Amenidad))</p>
                        }
                    </div>
                    
                    <!-- DIV 2.1: PRECIO -->
                    <div class="habitacion-precio">
                        <div class="precio-principal">
                            <span class="label">PRECIO/NOCHE</span>
                            <span class="valor">S/ @hab.PrecioBase.GetValueOrDefault().ToString("N2")</span>
                        </div>
                        
                        <div class="precio-desglose">
                            <p><strong>Precio Base:</strong> <span>S/ @hab.PrecioBase.GetValueOrDefault().ToString("N2")</span></p>
                            <p><strong>Impuestos:</strong> <span>S/ @hab.PrecioImpuestos.GetValueOrDefault().ToString("N2")</span></p>
                        </div>
                        
                        <div class="disponibilidad">
                            @if (hab.Disponible)
                            {
                                <span class="badge-disponible">‚úì Disponible</span>
                            }
                            else
                            {
                                <span class="badge-no-disponible">‚úó No Disponible</span>
                            }
                        </div>
                    </div>

                    <!-- DIV 2.2: BOTONES DE ACCI√ìN -->
                    <div class="habitacion-botones">
                        @if (hab.Disponible)
                        {
                            <a asp-controller="Reservas" 
                               asp-action="IniciarReserva" 
                               asp-route-habitacionId="@hab.HabitacionId"
                               class="btn-reservar-negro">
                                üõèÔ∏è Reservar
                            </a>
                        }
                        else
                        {
                            <button class="btn-reservar-negro disabled" disabled>
                                üõèÔ∏è No Disponible
                            </button>
                        }

                        <a asp-controller="Habitacion" 
                           asp-action="Detalles" 
                           asp-route-id="@hab.HabitacionId" 
                           class="btn-detalles-negro">
                            üìã Detalles
                        </a>
                    </div>

                </div>
            }
        }
        else
        {
            <p class="sin-resultados">No hay habitaciones disponibles para este hotel.</p>
        }
    </div>
</section>

    <!-- Men√∫ Flotante (solo si hay sesi√≥n) -->
    @if (HttpContextAccessor.HttpContext.Session.GetString("UsuarioNombre") != null)
    {
        <div class="menu-flotante" id="menuFlotante">
            <!-- Opciones del men√∫ (ocultas inicialmente) -->
