@{
    ViewData["Title"] = "Registro de Usuario";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <style>
        .registro-container {
            max-width: 400px;
            margin: 50px auto;
            padding: 30px;
            border-radius: 10px;
            background-color: #f7f7f7;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            font-family: Arial, sans-serif;
        }

        .registro-container h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .registro-container label {
            display: block;
            margin-top: 10px;
            font-weight: bold;
        }

        .registro-container input {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        .registro-container button {
            width: 100%;
            margin-top: 20px;
            padding: 10px;
            background-color: #0078d4;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .registro-container button:hover {
            background-color: #005a9e;
        }

        .error-message {
            color: red;
            text-align: center;
            margin-bottom: 15px;
        }

        .login-link {
            display: block;
            text-align: center;
            margin-top: 15px;
            color: #0078d4;
            text-decoration: none;
        }

        .login-link:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="registro-container">
        <h2>Registro de Usuario</h2>

        @if(ViewBag.Mensaje != null)
        {
            <div class="error-message">@ViewBag.Mensaje</div>
        }

        <form method="post" asp-controller="Login" asp-action="RegisterUser">
            <label>Nombre</label>
            <input type="text" name="nombre" required>

            <label>Apellido</label>
            <input type="text" name="apellido" required>

            <label>Email</label>
            <input type="email" name="email" required>

            <label>Contraseña</label>
            <input type="password" name="contra" required>

            <label>Teléfono</label>
            <input type="text" name="telefono" required>

            <button type="submit">Registrar</button>
        </form>

        <a href="@Url.Action("Index", "Login")" class="login-link">Ya tienes cuenta? Inicia sesión</a>
    </div>
</body>
</html>