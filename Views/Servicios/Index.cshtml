    <script>
        // Script de navegaci√≥n de servicios
        const servicioLinks = document.querySelectorAll('.servicio-link');
        const servicioDetalles = document.querySelectorAll('.servicio-detalle');

        servicioLinks.forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                    
                // Remover active de todos
                servicioLinks.forEach(l => l.classList.remove('active'));
                servicioDetalles.forEach(d => d.classList.remove('active'));
                    
                // Agregar active al seleccionado
                this.classList.add('active');
                const servicioId = this.getAttribute('data-servicio');
                document.getElementById(servicioId).classList.add('active');
            });
        });
    </script>
